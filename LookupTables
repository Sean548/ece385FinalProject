module floorBlockTable (
	input logic clk,
	input logic [1:0] in,
	output logic [7:0] VGA_R, VGA_G, VGA_B
);

always_ff @ (negedge clk)
	case (in)
	2'b00: begin
			 VGA_R <=8'hff;
			 VGA_G <=8'hce;
			 VGA_B <=8'hc6;
			 end
			 
	2'b01: begin
			 VGA_R <=8'h00;
			 VGA_G <=8'h00;
			 VGA_B <=8'h00;
			 end
			 
	2'b10: begin
			 VGA_R <=8'h09;
			 VGA_G <=8'hc4;
			 VGA_B <=8'ha0;
			 end
	endcase
endmodule

