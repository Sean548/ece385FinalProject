module MarioTable (
	input logic clk,
	input logic [1:0] in,
	output logic [7:0] VGA_R, VGA_G, VGA_B
);

always_ff @ (negedge clk)
	case (in)
	2'b00: begin
			 VGA_R <=8'h0f;
			 VGA_G <=8'hf0;
			 VGA_B <=8'he4;
			 end
			 
	2'b01: begin
			 VGA_R <=8'hb1;
			 VGA_G <=8'h34;
			 VGA_B <=8'h25;
			 end
			 
	2'b10: begin
			 VGA_R <=8'h06;
			 VGA_G <=8'ha6;
			 VGA_B <=8'hb4;
			 end
			 
	2'b11: begin
			 VGA_R <=8'he3;
			 VGA_G <=8'h9d;
			 VGA_B <=8'h25;
			 end
	endcase
endmodule
